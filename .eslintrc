{
  "extends": "standard",
  "root": true,
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "babel",
    "flow-vars"
  ],
  "rules": {
    "semi": [2, "always"],
    "space-before-function-paren": [2, { "anonymous": "always", "named": "never" }]
  }
}
